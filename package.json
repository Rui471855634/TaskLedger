{
  "name": "taskledger",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm_config_cache=.npm-cache npm run dev -w apps/web",
    "build": "npm_config_cache=.npm-cache npm run build -w apps/web",
    "preview": "npm_config_cache=.npm-cache npm run preview -w apps/web",
    "lint": "npm_config_cache=.npm-cache npm run lint -w apps/web",
    "bundle": "node tools/make-release-bundle.mjs",
    "bundle:win": "node tools/make-release-bundle.mjs --target win",
    "bundle:mac": "node tools/make-release-bundle.mjs --target mac",
    "bundle:all": "node tools/make-release-bundle.mjs --target all"
  }
}

